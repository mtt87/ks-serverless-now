{
  "version": 2,
  "name": "ks-serverless-now",
  "alias": "ks-serverless-now.now.sh",
  "builds": [
    { "src": "server/api/**/*.js", "use": "@now/node" },
    { "src": "www/package.json", "use": "@now/next" },
    { "src": "deck/package.json", "use": "@now/static-build" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/$1"
    },
    {
      "src": "/demo/(.*)",
      "dest": "/www/$1",
      "headers": {
        "x-request-path": "$1"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/deck/$1"
    }
  ]
}
